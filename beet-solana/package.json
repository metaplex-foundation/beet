{
  "name": "@metaplex-foundation/beet-solana",
  "version": "0.0.0",
  "description": "Solana specific extension for beet, the borsh compatible de/serializer",
  "main": "dist/src/beet-solana.js",
  "types": "dist/src/beet-solana.d.ts",
  "scripts": {
    "check:publish-ready": "yarn build && yarn test",
    "preversion": "yarn check:publish-ready",
    "postversion": "git add package.json && git commit -m \"chore: update $npm_package_name to v$npm_package_version\" && git tag $npm_package_name@$npm_package_version",
    "prepublishOnly": "yarn check:publish-ready",
    "postpublish": "git push origin && git push origin --tags",
    "build": "rimraf dist && tsc -p tsconfig.json",
    "pretest": "yarn build",
    "test": "tape dist/test/*.js",
    "test:browser": "airtap ./test/*.ts",
    "lint": "prettier -c ./src/",
    "lint:fix": "prettier --format ./src",
    "doc": "typedoc src/*.ts --readme README.md"
  },
  "repository": "git@github.com:metaplex-foundation/beet-solana.git",
  "author": "Thorsten Lorenz <thlorenz@gmx.de>",
  "license": "Apache-2.0",
  "private": false,
  "directories": {
    "dist": "./dist/src"
  },
  "files": [
    "dist/src/*"
  ],
  "dependencies": {
    "@metaplex-foundation/beet": "*",
    "@solana/web3.js": "^1.31.0"
  },
  "devDependencies": {
    "@types/node": "^14.18.0",
    "@types/tape": "^4.13.2",
    "airtap": "^4.0.4",
    "airtap-system": "^0.1.0",
    "browserify": "^17.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "tape": "^5.3.2",
    "tsify": "^5.0.4",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.2"
  }
}
