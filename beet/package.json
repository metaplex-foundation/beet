{
  "name": "@metaplex-foundation/beet",
  "version": "0.3.0",
  "description": "Strict borsh compatible de/serializer",
  "sideEffects": false,
  "main": "dist/cjs/src/beet.js",
  "module": "dist/esm/src/beet.js",
  "types": "dist/types/src/beet.d.ts",
  "exports": {
    "import": "./dist/esm/src/beet.js",
    "require": "./dist/cjs/src/beet.js"
  },
  "scripts": {
    "check:publish-ready": "yarn build && yarn test",
    "preversion": "yarn check:publish-ready",
    "postversion": "git add package.json && git commit -m \"chore: update $npm_package_name to v$npm_package_version\" && git tag $npm_package_name@$npm_package_version",
    "prepublishOnly": "yarn check:publish-ready",
    "postpublish": "git push origin && git push origin --tags",
    "build": "rimraf dist && tsc -p tsconfig.json && tsc -p tsconfig.esm.json",
    "pretest": "yarn build",
    "test": "tape dist/cjs/test/{unit,compat}/*.js",
    "test:browser": "airtap ./test/{unit,compat}/*.ts",
    "bsamples": "cd ../tools/bsamples && cargo run",
    "lint": "prettier -c ./src/",
    "lint:fix": "prettier --write ./src",
    "doc": "rimraf ../docs/beet && typedoc",
    "doctoc": "doctoc README.md"
  },
  "repository": "git@github.com:metaplex-foundation/beet.git",
  "author": "Thorsten Lorenz <thlorenz@gmx.de>",
  "license": "Apache-2.0",
  "directories": {
    "dist": "./dist/src"
  },
  "files": [
    "dist/esm/src/*",
    "dist/cjs/src/*",
    "dist/types/src/*"
  ],
  "dependencies": {
    "ansicolors": "^0.3.2",
    "bn.js": "^5.2.0",
    "debug": "^4.3.3"
  },
  "devDependencies": {
    "@types/ansicolors": "^0.0.33",
    "@types/bn.js": "^5.1.0",
    "@types/debug": "^4.1.7",
    "@types/node": "^14.18.0",
    "@types/tape": "^4.13.2",
    "airtap": "^4.0.4",
    "airtap-system": "^0.1.0",
    "browserify": "^17.0.0",
    "doctoc": "^2.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "spok": "^1.4.3",
    "supports-color": "^8.1.1",
    "tape": "^5.3.2",
    "tsify": "^5.0.4",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.2"
  }
}
